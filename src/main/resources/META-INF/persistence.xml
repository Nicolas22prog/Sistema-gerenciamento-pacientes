<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="GerenciadorPacientePU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>jdbc/pacientes</jta-data-source>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <shared-cache-mode>NONE</shared-cache-mode>
    <properties>
      <property name="eclipselink.target-database" value="org.eclipse.persistence.platform.database.MySQLPlatform"/>
      <property name="jakarta.persistence.schema-generation.database.action" value="create-or-extend-tables"/>
      <!--<property name="jakarta.persistence.schema-generation.create-script-source" value="create-db.sql"/> -->
      <property name="jakarta.persistence.sharedCache.mode" value="NONE"/>
      <property name="eclipselink.cache.shared.default" value="false"/>
      <property name="eclipselink.cache-usage" value="DoNotCheckCache"/>
      <property name="eclipselink.logging.level" value="INFO"/>
      <property name="eclipselink.logging.level.sql" value="INFO"/>
      <property name="eclipselink.logging.parameters" value="true"/>
      <!--<property name="eclipselink.validation-only" value="true"/>-->
    </properties>
  </persistence-unit>
</persistence>
